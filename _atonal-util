_atonalutil_basic() {
  _arguments -s \
    '--flats[print notes as flats]' \
    '--ly[emit notes not pitch numbers]'
}
_atonalutil_circular_permute() {
  _arguments -s \
    '--flats[print notes as flats]' \
    '--ly[emit notes not pitch numbers]'
}
